.content
  .form-line
    .header
      .title MCP Settings
      .description Configure settings for the MCP (Model Control Protocol) integration

  .form-group
    label Server URL
    input.form-control(
      type='text',
      [(ngModel)]='config.store.mcp.serverUrl',
      (ngModelChange)='config.save()',
    )
    .text-muted The URL of the MCP server to connect to

  .form-group
    label Port
    input.form-control(
      type='number',
      [(ngModel)]='config.store.mcp.port',
      (ngModelChange)='config.save()',
    )
    .text-muted The port number for the MCP server

  .form-group
    label Server Control
    .d-flex
      button.btn.btn-primary.mr-2(
        *ngIf='!isServerRunning',
        (click)='startServer()',
      )
        i.fas.fa-play.mr-2
        span Start Server
      button.btn.btn-danger(
        *ngIf='isServerRunning',
        (click)='stopServer()',
      )
        i.fas.fa-stop.mr-2
        span Stop Server
    .text-muted.mt-2(*ngIf='isServerRunning') Server is currently running
    .text-muted.mt-2(*ngIf='!isServerRunning') Server is currently stopped

  .form-group
    label Enable Debug Logging
    toggle(
      [(ngModel)]='config.store.mcp.enableDebugLogging',
      (ngModelChange)='toggleDebugLogging()',
    )
    .text-muted Enable detailed logging for MCP operations
